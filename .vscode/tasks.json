{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Scoop",
      "type": "shell",
      "command": "powershell -ExecutionPolicy RemoteSigned -Command \"Invoke-RestMethod -Uri https://get.scoop.sh | Invoke-Expression\""
    },
    {
      "label": "Install Geode CLI via Scoop",
      "type": "shell",
      "command": "powershell -Command \"scoop bucket add extras; scoop install geode-sdk-cli\""
    },
    {
      "label": "Setup Geode Profile",
      "type": "shell",
      "command": "geode config setup"
    },
    {
      "label": "Install Geode SDK",
      "type": "shell",
      "command": "geode sdk install"
    },
    {
      "label": "Build Geode Mod",
      "type": "shell",
      "command": "geode build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run Geometry Dash",
      "type": "shell",
      "command": "\"C:\\Program Files (x86)\\Steam\\steamapps\\common\\Geometry Dash\\GeometryDash.exe\"",
      "group": {
        "kind": "test",
        "isDefault": false
      }
    }
  ]
}